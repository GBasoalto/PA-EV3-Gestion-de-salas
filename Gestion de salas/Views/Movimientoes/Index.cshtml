@model IEnumerable<Gestion_de_salas.Models.Movimiento>

@{
    ViewData["Title"] = "Movimientos";
}

<h1>Movimientos de Reservas</h1>

<table id="tablaMovimientos" class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Fecha Movimiento</th>
            <th>Acción</th>
            <th>Usuario</th>
            <th>Carreras</th>
            <th>Sala</th>
            <th>Observación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Accion</td>
                <td>@item.Reserva.Usuario?.Nombre @item.Reserva.Usuario?.Apellido1</td>
                <td>
                    @if (item.Reserva.Usuario != null)
                    {
                        @string.Join(", ", item.Reserva.Usuario.UsuarioCarreras.Select(uc => uc.Carrera.Nombre))
                    }
                </td>
                <td>@item.Reserva.Sala?.Nombre</td>
                <td>@item.Observacion</td>
                <td>
                    <a asp-controller="Movimientoes" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {

    <!-- DataTables CSS -->
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tablaMovimientos').DataTable({
                "pageLength": 10,
                "ordering": true,
                "lengthMenu": [5, 10, 20, 50],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-CL.json"
                }
            });
        });
    </script>
}
