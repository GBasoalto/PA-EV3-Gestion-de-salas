@model Gestion_de_salas.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

@section Head {
    <link rel="stylesheet" href="~/css/Usuarios.css" asp-append-version="true" />
}

<div class="card usuario-card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-person-badge"></i> Detalles del Usuario</h4>
    </div>

    <div class="card-body">
        <dl class="row mb-0">

            <dt class="col-sm-3 fw-bold">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3 fw-bold">Apellido Paterno</dt>
            <dd class="col-sm-9">@Model.Apellido1</dd>

            <dt class="col-sm-3 fw-bold">Apellido Materno</dt>
            <dd class="col-sm-9">@Model.Apellido2</dd>

            <dt class="col-sm-3 fw-bold">RUT</dt>
            <dd class="col-sm-9">@Model.Rut</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Contraseña</dt>
            <dd class="col-sm-9">
                <span class="password-mask">••••••••</span>
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Estado)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactivo</span>
                }
            </dd>

            <dt class="col-sm-3 fw-bold">Tipo de Usuario</dt>
            <dd class="col-sm-9">@Model.TipoUsuario?.Tipo</dd>

        </dl>
    </div>

    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}