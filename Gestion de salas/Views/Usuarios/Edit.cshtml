@model Gestion_de_salas.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<link rel="stylesheet" href="~/css/Usuarios.css" />

<div class="container mt-4">
    <div class="card shadow form-card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Editar Usuario</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">

                    <div class="col-md-4">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Apellido1" class="form-label fw-bold"></label>
                        <input asp-for="Apellido1" class="form-control" />
                        <span asp-validation-for="Apellido1" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Apellido2" class="form-label fw-bold"></label>
                        <input asp-for="Apellido2" class="form-control" />
                        <span asp-validation-for="Apellido2" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Rut" class="form-label fw-bold"></label>
                        <input asp-for="Rut" class="form-control" />
                        <span asp-validation-for="Rut" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label fw-bold"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label fw-bold">Tipo Usuario</label>
                        <select asp-for="TipoUsuarioId" class="form-select" asp-items="ViewBag.TipoUsuarioId"></select>
                        <span asp-validation-for="TipoUsuarioId" class="text-danger"></span>
                    </div>

                    <!-- ======================
                         CAMPO ESTADO ACTIVO/INACTIVO
                    ======================= -->
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="true" selected>Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <!-- NUEVA PASSWORD (opcional) -->
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Nueva Contraseña (opcional)</label>
                        <input type="password" name="NuevaPassword" class="form-control" />
                    </div>

                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">Guardar cambios</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}