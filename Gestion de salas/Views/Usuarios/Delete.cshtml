@model Gestion_de_salas.Models.Usuario

@section Head {
    <link rel="stylesheet" href="~/css/Usuarios.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="card usuario-card shadow-sm mt-4">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0"><i class="bi bi-trash"></i> Eliminar Usuario</h4>
    </div>

    <div class="card-body">
        <p class="text-danger fw-bold">
            ¿Estás seguro de que deseas eliminar este usuario?
        </p>

        <dl class="row mb-0">

            <dt class="col-sm-3 fw-bold">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3 fw-bold">Apellido Paterno</dt>
            <dd class="col-sm-9">@Model.Apellido1</dd>

            <dt class="col-sm-3 fw-bold">Apellido Materno</dt>
            <dd class="col-sm-9">@Model.Apellido2</dd>

            <dt class="col-sm-3 fw-bold">RUT</dt>
            <dd class="col-sm-9">@Model.Rut</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Contraseña</dt>
            <dd class="col-sm-9">
                <span class="password-mask">••••••••</span>
            </dd>

            <dt class="col-sm-3 fw-bold">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Estado)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactivo</span>
                }
            </dd>

            <dt class="col-sm-3 fw-bold">Tipo de Usuario</dt>
            <dd class="col-sm-9">@Model.TipoUsuario?.Tipo</dd>

            <!-- NUEVO: Mostrar Carreras -->
            <dt class="col-sm-3 fw-bold">Carreras</dt>
            <dd class="col-sm-9">
                @if (Model.UsuarioCarreras.Any())
                {
                    @string.Join(", ", Model.UsuarioCarreras.Select(uc => uc.Carrera.Nombre))
                }
                else
                {
                    <span class="text-muted">Sin asignar</span>
                }
            </dd>

        </dl>
    </div>

    <div class="card-footer text-center">
        <form asp-action="DeleteConfirmed" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
        </form>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
