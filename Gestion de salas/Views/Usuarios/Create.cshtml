@model Gestion_de_salas.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

@section Head {
    <link rel="stylesheet" href="~/css/Usuarios.css" asp-append-version="true" />
}

<div class="card usuario-card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="bi bi-person-plus"></i> Crear Nuevo Usuario</h4>
    </div>

    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apellido1" class="form-label"></label>
                <input asp-for="Apellido1" class="form-control" />
                <span asp-validation-for="Apellido1" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Apellido2" class="form-label"></label>
                <input asp-for="Apellido2" class="form-control" />
                <span asp-validation-for="Apellido2" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rut" class="form-label"></label>
                <input asp-for="Rut" class="form-control" />
                <span asp-validation-for="Rut" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Estado" class="form-check-input" checked />
                <label asp-for="Estado" class="form-check-label">Activo</label>
            </div>

            <div class="mb-3">
                <label asp-for="TipoUsuarioId" class="form-label"></label>
                <select asp-for="TipoUsuarioId" class="form-select" asp-items="ViewBag.TipoUsuarioId">
                    <option value="">-- Seleccionar Tipo de Usuario --</option>
                </select>
                <span asp-validation-for="TipoUsuarioId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary btn-sm me-2">Crear</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}