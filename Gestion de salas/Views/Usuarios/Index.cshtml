@model IEnumerable<Gestion_de_salas.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

@section Head {
    <link rel="stylesheet" href="~/css/Usuarios.css" asp-append-version="true" />
}

<div class="usuarios-container">
    <div class="title-row">
        <h2>Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary btn-sm">Crear Nuevo</a>
    </div>

    <table class="table table-striped table-hover usuarios-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido 1</th>
                <th>Apellido 2</th>
                <th>RUT</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Tipo Usuario</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido1</td>
                    <td>@item.Apellido2</td>
                    <td>@item.Rut</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>@item.TipoUsuario?.Tipo</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Ver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}