@model IEnumerable<Gestion_de_salas.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

@section Head {
    <link rel="stylesheet" href="~/css/Usuarios.css" asp-append-version="true" />
}

<div class="usuarios-container">
    <div class="title-row d-flex justify-content-between align-items-center mb-3">
        <h2>Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary btn-sm">Crear Nuevo</a>
    </div>

    <table id="usuariosTable" class="table table-striped table-hover usuarios-table">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido 1</th>
                <th>Apellido 2</th>
                <th>RUT</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Tipo Usuario</th>
                <th>Carreras</th> 
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido1</td>
                    <td>@item.Apellido2</td>
                    <td>@item.Rut</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>@item.TipoUsuario?.Tipo</td>
                    <td>
                        @if (item.UsuarioCarreras.Any())
                        {
                            @string.Join(", ", item.UsuarioCarreras.Select(uc => uc.Carrera.Nombre))
                        }
                        else
                        {
                            <span class="text-muted">Sin asignar</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Ver</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {

    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log("Script ejecutado");

            // Ver si jQuery funciona
            console.log("Probando jQuery:", typeof $);

            $('#usuariosTable').DataTable({
                responsive: true,
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                language: {
                    url: "https://cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json"
                }
            });

            console.log("DataTable inicializado");
        });
    </script>
}






