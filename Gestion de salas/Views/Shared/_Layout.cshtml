<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion_de_salas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_de_salas.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Gestion_de_salas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <img src="~/images/logo.png" alt="Logo CFT" class="logo-header me-2" />
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuarios" asp-action="Index">Gestión de Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TipoUsuarios" asp-action="Index">Tipos de Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
    </header>
    <div class="d-flex">
        <!-- BARRA -->
        <nav class="sidebar bg-dark text-white p-3">
            <h4 class="text-center mb-4">Gestión de Salas</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Inicio
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-people"></i> Gestión de Usuarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="TipoUsuarios" asp-action="Index">
                        <i class="bi bi-people"></i> Tipos de Usuarios
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Reservas" asp-action="Index">
                        <i class="bi bi-calendar-check"></i> Reservas de Salas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Informacion" asp-action="Index">
                        <i class="bi bi-info-circle"></i> Sobre el CFT
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Reglamento" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i> Reglas
                    </a>
                </li>
            </ul>
        </nav>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    </div>
    <!-- CONTENIDO DE LA PÁGINA-->
    
        
    </div>
   

    <div>
        <footer class="border-top pt-3 text-muted small">
            &copy; 2025 - Gestión de Salas
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
