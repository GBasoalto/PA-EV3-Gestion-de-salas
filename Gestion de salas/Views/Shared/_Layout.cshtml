<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion_de_salas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_de_salas.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo CFT" class="logo-header" />
                    Gestion_de_salas
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENEDOR PRINCIPAL: SIDEBAR + CONTENIDO -->
    <div class="d-flex">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <h4>Gestión de Salas</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span>Gestión de Usuarios</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="TipoUsuarios" asp-action="Index">
                        <i class="bi bi-person-badge"></i>
                        <span>Tipos de Usuarios</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reservas" asp-action="Index">
                        <i class="bi bi-calendar-check"></i>
                        <span>Reservas de Salas</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Informacion" asp-action="Index">
                        <i class="bi bi-info-circle"></i>
                        <span>Sobre el CFT</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reglamento" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Reglas</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- CONTENIDO PRINCIPAL -->
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer>
        &copy; 2025 - Gestión de Salas - CFT
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>