<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_de_salas.styles.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body>




    <header class="top-header">
        <div class="left-section">
            <img src="~/images/logo.png" alt="Logo" class="logo-img" />

            <span class="system-title">Sistema de Reservas</span>
        </div>

        <div class="right-section">
            @{

                var userName = Context.Session.GetString("NombreUsuario");
                var lastName = Context.Session.GetString("ApellidoUsuario");
            }

            <span class="username">Hola, @userName @lastName</span>

            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-light btn-sm ms-3">
                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
            </a>
        </div>
    </header>


    @{
        var tipoUsuario = Context.Session.GetString("TipoUsuario");
    }

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar p-3">
            <h4>Gestión de Salas</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Inicio
                    </a>
                </li>

                @if (tipoUsuario == "Administrador")
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Usuarios" asp-action="Index">
                            <i class="bi bi-people"></i> Gestión de Usuarios
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Movimientoes" asp-action="Index">
                            <i class="bi bi-journal-text"></i> Movimientos
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reservas" asp-action="Index">
                        <i class="bi bi-calendar-check"></i> Reservas de Salas
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">
                        <i class="bi bi-info-circle"></i> Sobre la biblioteca
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Reglas">
                        <i class="bi bi-file-earmark-text"></i> Reglas
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <main class="flex-fill p-3" role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3">
        &copy; 2025 - Gestión de Salas - CFT
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
