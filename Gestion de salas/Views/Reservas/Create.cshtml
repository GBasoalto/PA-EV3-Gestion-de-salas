@model Gestion_de_salas.Models.Reserva

@{
    ViewData["Title"] = "Crear Reserva";
    var tipoUsuario = Context.Session.GetString("TipoUsuario");
    var usuarioId = Context.Session.GetInt32("UsuarioId");
}

<h1>Crear Reserva</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Fecha de reserva -->
            <div class="form-group">
                <label asp-for="FechaReserva" class="control-label"></label>
                <input asp-for="FechaReserva" class="form-control" type="date" value="@Model.FechaReserva.ToString("yyyy-MM-dd")" id="FechaReserva" />
                <span asp-validation-for="FechaReserva" class="text-danger"></span>
            </div>

            <!-- Hora inicio -->
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" type="time" step="1800" id="HoraInicio" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>

            <!-- Hora fin -->
            <div class="form-group">
                <label asp-for="HoraFin" class="control-label"></label>
                <input asp-for="HoraFin" class="form-control" type="time" step="1800" id="HoraFin" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>

            <!-- Usuario -->
            @if (tipoUsuario == "Administrador")
                {
                    <div class="form-group">
                        <label asp-for="UsuarioId" class="control-label"></label>
                        <select asp-for="UsuarioId" class="form-control" asp-items="@(ViewData["UsuarioId"] as SelectList)">
                            <option value="">--Seleccione Usuario--</option>
                        </select>
                        <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>
                }
                else
                {
                         <input type="hidden" asp-for="UsuarioId" value="@usuarioId" />
                }

            <!-- Sala -->
            <div class="form-group">
                <label asp-for="SalaId" class="control-label"></label>
                <select asp-for="SalaId" class="form-control" asp-items="@(ViewData["SalaId"] as SelectList)" id="SalaId"></select>
            </div>

            <!-- Estado reserva oculto -->
            <input asp-for="EstadoReserva" type="hidden" value="Activa" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            function actualizarSalas() {
                var fecha = $('#FechaReserva').val();
                var horaInicio = $('#HoraInicio').val();
                var horaFin = $('#HoraFin').val();

                if (!fecha || !horaInicio || !horaFin) return;

                $.ajax({
                    url: '@Url.Action("GetDisponibilidad", "Reservas")',
                    type: 'GET',
                    data: {
                        fecha: fecha,
                        horaInicio: horaInicio,
                        horaFin: horaFin
                    },
                    success: function (data) {
                        var salaSelect = $('#SalaId');
                        salaSelect.empty();

                        if (data.salas.length === 0) {
                            salaSelect.append(new Option("No hay salas disponibles", ""));
                        } else {
                            data.salas.forEach(function (sala) {
                                salaSelect.append(new Option(sala.Nombre, sala.Id));
                            });
                        }
                    }
                });
            }

            // Actualizar salas cuando cambia fecha o hora
            $('#FechaReserva, #HoraInicio, #HoraFin').change(actualizarSalas);
        });
    </script>
}
