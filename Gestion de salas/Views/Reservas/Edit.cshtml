@model Gestion_de_salas.Models.Reserva

@{
    ViewData["Title"] = "Editar Reserva";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark py-3">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Reserva</h3>
        </div>

        <div class="card-body">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="row g-3">

                    <!-- FECHA -->
                    <div class="col-md-6">
                        <label asp-for="FechaReserva" class="form-label fw-bold"></label>
                        <input asp-for="FechaReserva" type="date" class="form-control" />
                        <span asp-validation-for="FechaReserva" class="text-danger"></span>
                    </div>

                    <!-- HORA INICIO -->
                    <div class="col-md-3">
                        <label asp-for="HoraInicio" class="form-label fw-bold"></label>
                        <input asp-for="HoraInicio" type="time" step="1800" class="form-control" />
                        <span asp-validation-for="HoraInicio" class="text-danger"></span>
                    </div>

                    <!-- HORA FIN -->
                    <div class="col-md-3">
                        <label asp-for="HoraFin" class="form-label fw-bold"></label>
                        <input asp-for="HoraFin" type="time" step="1800" class="form-control" />
                        <span asp-validation-for="HoraFin" class="text-danger"></span>
                    </div>

                    <!-- USUARIO -->
                    <div class="col-md-6">
                        <label asp-for="UsuarioId" class="form-label fw-bold"></label>
                        <select asp-for="UsuarioId"
                                class="form-select"
                                asp-items="ViewBag.UsuarioId"></select>
                        <span asp-validation-for="UsuarioId" class="text-danger"></span>
                    </div>

                    <!-- SALA -->
                    <div class="col-md-6">
                        <label asp-for="SalaId" class="form-label fw-bold"></label>
                        <select asp-for="SalaId"
                                class="form-select"
                                asp-items="ViewBag.SalaId"></select>
                        <span asp-validation-for="SalaId" class="text-danger"></span>
                    </div>

                    <!-- ESTADO -->
                    <div class="col-md-12">
                        <label asp-for="EstadoReserva" class="form-label fw-bold"></label>
                        <input asp-for="EstadoReserva" class="form-control" />
                        <span asp-validation-for="EstadoReserva" class="text-danger"></span>
                    </div>

                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-warning px-4">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>

            </form>

        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
