@model Gestion_de_salas.Models.Reserva

@{
    ViewData["Title"] = "Detalle de Reserva";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        Información de la Reserva
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaReserva.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Hora Inicio</dt>
            <dd class="col-sm-9">@Model.HoraInicio.ToString("HH:mm")</dd>

            <dt class="col-sm-3">Hora Fin</dt>
            <dd class="col-sm-9">@Model.HoraFin.ToString("HH:mm")</dd>

            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9">@Model.Usuario?.Nombre @Model.Usuario?.Apellido1</dd>

            <dt class="col-sm-3">Sala</dt>
            <dd class="col-sm-9">@Model.Sala?.Nombre</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.EstadoReserva == "Activa")
                {
                    <span class="badge bg-success">@Model.EstadoReserva</span>
                }
                else if (Model.EstadoReserva == "Completada")
                {
                    <span class="badge bg-warning text-dark">@Model.EstadoReserva</span>
                }
                else if (Model.EstadoReserva == "Cancelada")
                {
                    <span class="badge bg-danger">@Model.EstadoReserva</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a Reservas</a>
</div>
