@model Gestion_de_salas.Models.Reserva

@{
    ViewData["Title"] = "Cancelar Reserva";
}

<h1>Cancelar Reserva</h1>

<h3>¿Está seguro que desea cancelar esta reserva?</h3>

<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.FechaReserva.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Hora Inicio</dt>
        <dd class="col-sm-10">@Model.HoraInicio.ToString("HH:mm")</dd>

        <dt class="col-sm-2">Hora Fin</dt>
        <dd class="col-sm-10">@Model.HoraFin.ToString("HH:mm")</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario?.Nombre @Model.Usuario?.Apellido1</dd>

        <dt class="col-sm-2">Sala</dt>
        <dd class="col-sm-10">@Model.Sala?.Nombre</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.EstadoReserva</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Cancelar Reserva" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>
